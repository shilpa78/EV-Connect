<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context=".ui.profile.Insurance">

    <TextView
        android:text="Insurance"
        android:height="80dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/baloo_bhaijaan"
        android:textAlignment="center"
        android:textColor="#191970"
        android:textSize="60sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:orientation="horizontal">

    <TextView
        android:text="Policy Holder:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/baloo_bhaijaan"
        android:textColor="#191970"
        android:textSize="30dp"
        android:gravity="center"/>

        <TextView
            android:id="@+id/policyholderID"
            android:hint="Policy Holder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:fontFamily="casual"
            android:textColor="@color/white"
            android:gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount:"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/baloo_bhaijaan"
            android:textColor="#191970"
            android:textSize="30dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/InsuranceAmountID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:textSize="20dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:textColor="@color/white"
            android:hint="Fetch Amount" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Premium Date:"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            android:fontFamily="@font/baloo_bhaijaan"
            android:textColor="#191970"
            android:textSize="30dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/premiumID"
            android:hint="MM/DD/YYYY"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:fontFamily="casual"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Renewal Date:"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            android:fontFamily="@font/baloo_bhaijaan"
            android:textColor="#191970"
            android:textSize="30dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/RenewalID"
            android:hint="MM/DD/YYYY"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:fontFamily="casual"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:hint="Add remaining number of days"
        android:id="@+id/remainingID"
        android:fontFamily="casual"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/insuranceback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/acme"
        android:textColor="#0047AB"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="150dp"
        android:text="Back">

    </Button>

</LinearLayout>